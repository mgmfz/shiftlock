-- Script de Shift Lock para Mobile (Bot√£o Pequeno)
-- Compat√≠vel com dispositivos m√≥veis

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Vari√°vel para controlar o estado do shift lock
local shiftLockEnabled = false

-- Fun√ß√£o para ativar/desativar shift lock
local function toggleShiftLock()
    shiftLockEnabled = not shiftLockEnabled
    
    if shiftLockEnabled then
        -- Ativar shift lock
        humanoid.AutoRotate = false
        
        -- Loop para manter a rota√ß√£o do personagem alinhada com a c√¢mera
        RunService.RenderStepped:Connect(function()
            if shiftLockEnabled and humanoidRootPart then
                local camera = workspace.CurrentCamera
                local cameraDirection = camera.CFrame.LookVector
                local newCFrame = CFrame.new(humanoidRootPart.Position, humanoidRootPart.Position + Vector3.new(cameraDirection.X, 0, cameraDirection.Z))
                humanoidRootPart.CFrame = newCFrame
            end
        end)
        
        print("Shift Lock ATIVADO")
    else
        -- Desativar shift lock
        humanoid.AutoRotate = true
        print("Shift Lock DESATIVADO")
    end
end

-- Criar bot√£o GUI pequeno para mobile
local ScreenGui = Instance.new("ScreenGui")
local ShiftLockButton = Instance.new("TextButton")

ScreenGui.Name = "ShiftLockGui"
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

ShiftLockButton.Name = "ShiftLockButton"
ShiftLockButton.Parent = ScreenGui
ShiftLockButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ShiftLockButton.BackgroundTransparency = 0.3
ShiftLockButton.Position = UDim2.new(0.92, 0, 0.5, 0)
ShiftLockButton.Size = UDim2.new(0, 45, 0, 45) -- Bot√£o menor (45x45)
ShiftLockButton.Font = Enum.Font.SourceSansBold
ShiftLockButton.Text = "üîí"
ShiftLockButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ShiftLockButton.TextSize = 20 -- Texto menor

-- Adicionar borda arredondada
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0.25, 0)
UICorner.Parent = ShiftLockButton

-- Evento de clique no bot√£o
ShiftLockButton.MouseButton1Click:Connect(function()
    toggleShiftLock()
    
    -- Mudar cor do bot√£o baseado no estado
    if shiftLockEnabled then
        ShiftLockButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    else
        ShiftLockButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    end
end)

-- Permitir que o bot√£o seja arrastado
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    ShiftLockButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

ShiftLockButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = ShiftLockButton.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

ShiftLockButton.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

print("Script de Shift Lock Mobile carregado!")
